<% include _layouts/header %>

<div class="row">
	<h1 class="page-header"><%= product.title %></h1>
	
	<div class="col-xs-12 col-md-5">
		<img src="/product_images/<%= product.id %>/<%= product.image %>" alt="" class="spi">
	</div>

	<div class="col-xs-12 col-md-7">
		<p><%= product.description %></p>
		<p><%= parseFloat(product.price).toFixed(2) %></p>
		<% if (loggedIn) { %>
			<p><a href="/cart/add/<%= product.slug %>">Add to Cart</a></p>
    	<% } else { %> 
			<p>Please log in to purchase items.</p>
    	<% } %> 
	</div>
	
	<div class="col-xs-12">
		<ul class="gallery">
			<% galleryImages.forEach(function(image) { %>
				<% if (image !== "thumbnails") { %>
				<li class="thumbnailDisplayPix">
					<a data-fancybox="gallery" href="/product_images/<%= id %>/gallery/<%= image %>">
						<img width="150" height="100" src="/product_images/<%= id %>/gallery/thumbnails/<%= image %>" alt="Product Image">
					</a>
				</li>
				<% } %>
			<% }); %>
		</ul>
	</div>

</div>

<% include _layouts/footer %>