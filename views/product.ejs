<% include _layouts/header %>

	<div class="parallax">
		<div class="pages-headline justify-content-center">
			<h1 id="headline" class="user-h1 col-xs-12"><%= product.title %></h1>
		</div>
		<br/>  
	</div> <!-- end of first row/ header area... -->

	<div class="row pages-row">
		<div class="col-xs-12 col-md-5">
	      <img src="/product_images/<%= product.id %>/<%= product.image %>" alt="" class="spi">
	  	</div>

		<div class="col-xs-12 col-sm-6 col-md-9">
			<div class="row justify-content-center">
				<div class="col-xs-12 col-md-7">
					<p><%= product.description %></p>
					<p><%= parseFloat(product.price).toFixed(2) %></p>
					<% if (loggedIn) { %>
						<p><a href="/cart/add/<%= product.slug %>">Add to Cart</a></p>
			    	<% } else { %> 
						<p>Please log in to purchase items.</p>
			    	<% } %> 
				</div>
			</div>
		</div>
	</div>

	<div class="row pages-row">
		<div class="col-xs-12">
			<ul class="gallery">
				<% galleryImages.forEach(function(image) { %>
					<% if (image !== "thumbnails") { %>
					<li class="thumbnailDisplayPix">
						<a data-fancybox="gallery" href="/product_images/<%= id %>/gallery/<%= image %>">
							<img width="150" height="100" src="/product_images/<%= id %>/gallery/thumbnails/<%= image %>" alt="Product Image">
						</a>
					</li>
					<% } %>
				<% }); %>
			</ul>
		</div>

<% include _layouts/footer %>