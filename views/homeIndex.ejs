<% include _layouts/homeHeader %>

	<div class="homepage-hero-module">
		<div id="innerVidDiv">
			<div class="headline justify-content-center">
				<h1 id="headline" class="user-h1 col-xs-12 text-white">Welcome to CMS Construction.Co</h1>
			</div>
		    <div class="filter"></div>
		    <video autoplay preload="auto" muted="true" loop class="fillWidth fadeIn animated" poster="/images/Snapshots/Handyman-Construction.jpg">
		        <source src="/images/MP4/Handyman-Construction.mp4" type="video/mp4" />
		        <source src="/images/WEBM/Handyman-Construction.webm" type="video/webm" />
		    </video>
		</div>
	    <div class="arrow bounce">
	    	<img height="75px" src="/images/arrow.png">
	    </div>
	</div> <!-- end of first row/jumbotron area... -->

	<div id="homepage-row" class="row">
		<div class="col-xs-12 col-sm-3">
	      <h3 class="text-white">Services</h3>
	      <br/>

	      <ul class="list-group">
	        <li class="list-group-item">
	          <a href="/products">All Services</a>
	        </li>

	        <% categories.forEach(function(category) { %>
	        <li class="list-group-item">
	          <a class="capitalize-text" href="/products/<%= category.slug %>"><%= category.title.replace(/\-+/g, " ") %></a>
	        </li>
	        <% }); %>
	      </ul>
	  	</div>

		<div class="col-xs-12 col-sm-9">
			<div class="row justify-content-center">
				<div class="col-xs-12 font-white"><%- content %></div>
			</div>
		</div>

<% include _layouts/footer %>